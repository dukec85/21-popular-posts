{% extends "master" %}
{% block content %}
<ul action="/posts" class="collection with-header">
  <li class="collection-header">
    <h4>Posts</h4>
    <a href="/posts/create"><i class="medium material-icons">add</i></a>
  </li>
  {% for post in posts %}
  <li class="collection-item">
    <div class="row post-list__item">
      <div class="thumbs-content__wrapper col s2">
        <div class="thumbs">
          <i class="material-icons">thumb_up</i>
          <h5 class="counter">5</h5>
          <i class="material-icons">thumb_down</i>
        </div>
      </div>
      <div class="col s10">
        <div class="post-info">
          <h4>{{ post.title }}</h4>
          <p>Listed by: {{ post.user.username }}</p>
        </div>
      </div>
    </div>
  </li>
  {% endfor %}
</ul>
{% endblock %}
